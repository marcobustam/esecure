@page
@model EsecureWebApp.Pages.Actividades.Verificaciones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>ActividadVerificacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActividadVerificacion.ActividadVerificacionID" />
            <div class="form-group">
                <label asp-for="ActividadVerificacion.Descripcion" class="control-label"></label>
                <input asp-for="ActividadVerificacion.Descripcion" class="form-control" />
                <span asp-validation-for="ActividadVerificacion.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
