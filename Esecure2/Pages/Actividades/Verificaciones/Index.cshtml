@page
@model EsecureWebApp.Pages.Actividades.Verificaciones.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Listas de verificación</h2>

<p>
    <a asp-page="Create">Nuevo CheckList</a>
</p>
<div class="bg-secondary">
    <table class="table table-bordered table-striped table-hover text-dark table-responsive-md" style="width:100%" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListaActividadVerificacion[0].Descripcion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaActividadVerificacion)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-emid="@item.EmpresaID" asp-route-id="@item.ActividadVerificacionID">Editar</a> |
                        <a asp-page="./Details" asp-route-emid="@item.EmpresaID" asp-route-id="@item.ActividadVerificacionID">Detalles</a> |
                        <a asp-page="./Delete" asp-route-emid="@item.EmpresaID" asp-route-id="@item.ActividadVerificacionID">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
    </div>
