@page
@model EsecureWebApp.Pages.Planes.Prevencion.ListasDeTareas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Listado</h2>

<p>
    <a asp-page="Create">Nuevo</a>
    <table class="table table-bordered table-striped table-hover text-dark table-responsive-md" style="width:100%" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListaDeTareas[0].Nombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaDeTareas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ListaDeTareasID">Editar</a> |
                        <a asp-page="./Details" asp-route-id="@item.ListaDeTareasID">Detalles</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ListaDeTareasID">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
