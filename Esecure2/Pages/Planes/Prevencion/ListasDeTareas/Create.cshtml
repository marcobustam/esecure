@page
@model EsecureWebApp.Pages.Planes.Prevencion.ListasDeTareas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear nuevo</h2>

<h4>ListaDeTareas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ListaDeTareas.PlanID" class="control-label"></label>
                <select asp-for="ListaDeTareas.PlanID" class ="form-control" asp-items="ViewBag.PlanID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ListaDeTareas.Nombre" class="control-label"></label>
                <input asp-for="ListaDeTareas.Nombre" class="form-control" />
                <span asp-validation-for="ListaDeTareas.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
