@page
@model EsecureWebApp.Pages.Planes.Prevencion.Tareas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Tarea</h2>

<h3>¿Estás seguro de eliminar la Tarea?</h3>
<div>
    <h4>Tarea</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tarea.PlanID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tarea.PlanID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tarea.NombreTarea)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tarea.NombreTarea)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tarea.FechaPlanificada)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tarea.FechaPlanificada)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tarea.FechaEjecucionReal)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tarea.FechaEjecucionReal)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tarea.EstadoID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tarea.EstadoID)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Tarea.TareaID" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="@Model.NuevoHistoricoTarea.TareaID" class="control-label"></label>
                <input asp-for="@Model.NuevoHistoricoTarea.TareaID" value="@Model.Tarea.TareaID" class="form-control" />
                <span asp-validation-for="@Model.NuevoHistoricoTarea.TareaID" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="@Model.NuevoHistoricoTarea.EstadoAnterior" class="control-label"></label>
                <input asp-for="@Model.NuevoHistoricoTarea.EstadoAnterior" value="@Model.Tarea.EstadoID" class="form-control" />
                <span asp-validation-for="@Model.NuevoHistoricoTarea.EstadoAnterior" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="@Model.NuevoHistoricoTarea.NuevoEstado" class="control-label"></label>
                <input asp-for="@Model.NuevoHistoricoTarea.NuevoEstado" value="@EsecureModel.Planificacion.EstadoTarea.Cancelada" class="form-control" />
                <span asp-validation-for="@Model.NuevoHistoricoTarea.NuevoEstado" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info">
                Planificar <i class="fa fa-forward"></i>
            </button>
        <input type="submit" value="Eliminar" class="btn btn-warning" /> |
        <a asp-page="/Planes/Prevencion/Planificaciones/Details" asp-route-emid=@Model.Tarea.EmpresaID asp-route-plid=@Model.Tarea.PlanID>Volver</a>
    </form>
</div>
