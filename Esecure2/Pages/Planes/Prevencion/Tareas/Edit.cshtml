@page
@model EsecureWebApp.Pages.Planes.Prevencion.Tareas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Tarea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tarea.TareaID" />
            <div class="form-group">
                <label asp-for="Tarea.PlanID" class="control-label"></label>
                <input asp-for="Tarea.PlanID" class="form-control" />
                <span asp-validation-for="Tarea.PlanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.NombreTarea" class="control-label"></label>
                <input asp-for="Tarea.NombreTarea" class="form-control" />
                <span asp-validation-for="Tarea.NombreTarea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.FechaPlanificada" class="control-label"></label>
                <input asp-for="Tarea.FechaPlanificada" class="form-control" />
                <span asp-validation-for="Tarea.FechaPlanificada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.FechaEjecucionReal" class="control-label"></label>
                <input asp-for="Tarea.FechaEjecucionReal" class="form-control" />
                <span asp-validation-for="Tarea.FechaEjecucionReal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.EstadoID" class="control-label"></label>
                <select asp-for="Tarea.EstadoID" class="form-control"></select>
                <span asp-validation-for="Tarea.EstadoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
