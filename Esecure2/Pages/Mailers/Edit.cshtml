@page
@model EsecureWebApp.Pages.Mailers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>MailSender</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MailSender.MailSenderID" />
            <div class="form-group">
                <label asp-for="MailSender.MailSenderFrom" class="control-label"></label>
                <input asp-for="MailSender.MailSenderFrom" class="form-control" />
                <span asp-validation-for="MailSender.MailSenderFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailSender.MailSenderTo" class="control-label"></label>
                <input asp-for="MailSender.MailSenderTo" class="form-control" />
                <span asp-validation-for="MailSender.MailSenderTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailSender.MailSenderSubject" class="control-label"></label>
                <input asp-for="MailSender.MailSenderSubject" class="form-control" />
                <span asp-validation-for="MailSender.MailSenderSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailSender.MailSenderMessage" class="control-label"></label>
                <input asp-for="MailSender.MailSenderMessage" class="form-control" />
                <span asp-validation-for="MailSender.MailSenderMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
