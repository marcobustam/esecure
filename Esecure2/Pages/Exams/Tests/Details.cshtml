@page
@model EsecureWebApp.Pages.Exams.Tests.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles:</h2>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Test.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Test.Name)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                <label asp-for="Question.TestID" class="control-label"></label>
                <input asp-for="Question.TestID" class="form-control" value="@Model.Test.TestID" />
            </div>
            <div class="form-group">
                <label asp-for="Question.CategoryID" class="control-label"></label>
                <select asp-for="Question.CategoryID" class="form-control" asp-items="ViewBag.CategoryList"></select>
                <span asp-validation-for="Question.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuestionTxt" class="control-label"></label>
                <input asp-for="Question.QuestionTxt" class="form-control" />
                <span asp-validation-for="Question.QuestionTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Test.TestID">Editar</a> |
    <a asp-page="./Index">Volver</a> |
    <a asp-page="/Exams/Questions/Create" asp-route-teid="@Model.Test.TestID">Agregar Pregunta</a>
</div>
<div class="bg-secondary">

    <table class="table table-bordered table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionList[0].TestID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionList[0].CategoryID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionList[0].QuestionID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionList[0].QuestionTxt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.QuestionList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryID)
                        .-
                        @Model.CategoryList.ElementAt(item.CategoryID - 1).Name

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionTxt)
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>

                </th>
                <th>

                </th>
                <th>

                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </tfoot>
    </table>
</div>

