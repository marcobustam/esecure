@page
@model EsecureWebApp.Pages.Exams.Evidences.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Evidence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Evidence.EvidenceID" />
            <div class="form-group">
                <label asp-for="Evidence.Descripcion" class="control-label"></label>
                <input asp-for="Evidence.Descripcion" class="form-control" />
                <span asp-validation-for="Evidence.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidence.EvidenceType" class="control-label"></label>
                <select asp-for="Evidence.EvidenceType" class="form-control"></select>
                <span asp-validation-for="Evidence.EvidenceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidence.FileUpID" class="control-label"></label>
                <select asp-for="Evidence.FileUpID" class="form-control" asp-items="ViewBag.FileUpID"></select>
                <span asp-validation-for="Evidence.FileUpID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidence.TimeStamp" class="control-label"></label>
                <input asp-for="Evidence.TimeStamp" class="form-control" />
                <span asp-validation-for="Evidence.TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidence.LastMod" class="control-label"></label>
                <input asp-for="Evidence.LastMod" class="form-control" />
                <span asp-validation-for="Evidence.LastMod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evidence.PersonaID" class="control-label"></label>
                <input asp-for="Evidence.PersonaID" class="form-control" />
                <span asp-validation-for="Evidence.PersonaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
