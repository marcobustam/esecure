@page
@model EsecureWebApp.Pages.Exams.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.QuestionID" />
            <div class="form-group">
                <label asp-for="Question.TestID" class="control-label"></label>
                <select asp-for="Question.TestID" class="form-control" asp-items="ViewBag.TestID"></select>
                <span asp-validation-for="Question.TestID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.CategoryID" class="control-label"></label>
                <input asp-for="Question.CategoryID" class="form-control" />
                <span asp-validation-for="Question.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuestionTxt" class="control-label"></label>
                <input asp-for="Question.QuestionTxt" class="form-control" />
                <span asp-validation-for="Question.QuestionTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
