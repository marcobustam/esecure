@page
@model EsecureWebApp.Pages.Mantenedores.Empresas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar empresa</h2>
<h4>Empresa: @Model.MyEmpresa.NombreFantasia </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Empresa.EmpresaID" />
            <div class="form-group">
                <label asp-for="Empresa.NombreFantasia" class="control-label"></label>
                <input asp-for="Empresa.NombreFantasia" class="form-control" />
                <span asp-validation-for="Empresa.NombreFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.RazonSocial" class="control-label"></label>
                <input asp-for="Empresa.RazonSocial" class="form-control" />
                <span asp-validation-for="Empresa.RazonSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.RutChile" class="control-label"></label>
                <input asp-for="Empresa.RutChile" class="form-control" />
                <span asp-validation-for="Empresa.RutChile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa.PersonaID" class="control-label"></label>
                <select asp-for="Empresa.PersonaID" class="form-control" asp-items="@Model.PersonasNameSL">
                    <option value="">-- Escoja un nombre --</option>
                </select>
                <span asp-validation-for="Empresa.PersonaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-info" />
                <a asp-page="~/Planes/Prevencion/Planificaciones/Index" asp-route-emid="@Model.MyEmpresa.EmpresaID" role="button" class="btn btn-info">Volver</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>
<hr />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
