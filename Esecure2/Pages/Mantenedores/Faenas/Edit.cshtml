@page
@model EsecureWebApp.Pages.Mantenedores.Faenas.EditModel

@{
    ViewData["Title"] = "Edit";
}
<ol class="breadcrumb">
    @* *************************************************************************** *@
    <li class="breadcrumb-item">
        <a href="#">Empresa</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Mantenedores</a>
    </li>
    <li class="breadcrumb-item">
        <a href="#">Faenas</a>
    </li>
    <li class="breadcrumb-item active">Editar</li>
    @* *************************************************************************** *@
</ol>
<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->

        <div class="card card-body bg-primary text-light">
            @* *************************************************************************** *@
            <h2>Modificar Faena # @Model.Faena.FaenaID</h2>
            <h4>Empresa: @Model.MyEmpresa.NombreFantasia </h4>
            @* *************************************************************************** *@
        </div>
        <hr />

        <div class="card">
            <div class="col-md-12">
                <br />
                @* *************************************************************************** *@
                <h4 class="card card-body bg-primary text-light">
                    Editar faenas:
                </h4>
                @* --------------------------------------------------------------------------- *@
                <div class="container-fluid card bg-light text-dark">
                    <br />
                    @* *************************************************************************** *@
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Faena.FaenaID" />
                        <input type="hidden" asp-for="Faena.EmpresaID" />
                        <input type="hidden" asp-for="Faena.Timestamp" />
                        @* TODO: Agregar ubicación *@
                        @*<input type="hidden" asp-for="Faena.Ubicacion" />*@
                        <div class="form-group">
                            <label asp-for="Faena.NombreFaena" class="control-label"></label>
                            <input asp-for="Faena.NombreFaena" class="form-control" />
                            <span asp-validation-for="Faena.NombreFaena" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success btn-sm" />
                            <a asp-page="/Mantenedores/Faenas/Create" asp-route-emid="@Model.MyEmpresa.EmpresaID" class="btn btn-info btn-sm float-md-right" role="button" data-toggle="tooltip" data-placement="top" title="" data-original-title="Volver">Volver</a>
                        </div>
                    </form>
                    @* *************************************************************************** *@
                </div>
                <br />
            </div>
            <br />
        </div>
    </div>
</div>
@* *************************************************************************** *@
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
