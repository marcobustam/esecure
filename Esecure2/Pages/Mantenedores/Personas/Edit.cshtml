@page
@model EsecureWebApp.Pages.Mantenedores.Personas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Persona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Persona.PersonaID" />
            <div class="form-group">
                <label asp-for="Persona.Documento" class="control-label"></label>
                <input asp-for="Persona.Documento" class="form-control" />
                <span asp-validation-for="Persona.Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Alias" class="control-label"></label>
                <input asp-for="Persona.Alias" class="form-control" />
                <span asp-validation-for="Persona.Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.PrimerNombre" class="control-label"></label>
                <input asp-for="Persona.PrimerNombre" class="form-control" />
                <span asp-validation-for="Persona.PrimerNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.SegundoNombre" class="control-label"></label>
                <input asp-for="Persona.SegundoNombre" class="form-control" />
                <span asp-validation-for="Persona.SegundoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.ApellidoPaterno" class="control-label"></label>
                <input asp-for="Persona.ApellidoPaterno" class="form-control" />
                <span asp-validation-for="Persona.ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.ApellidoMaterno" class="control-label"></label>
                <input asp-for="Persona.ApellidoMaterno" class="form-control" />
                <span asp-validation-for="Persona.ApellidoMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.FechaNacimiento" class="control-label"></label>
                <input asp-for="Persona.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Persona.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
