@page
@model EsecureWebApp.Pages.Mantenedores.Direcciones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Direccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Direccion.DireccionID" />
            <div class="form-group">
                <label asp-for="Direccion.EmpresaID" class="control-label"></label>
                <input asp-for="Direccion.EmpresaID" class="form-control" />
                <span asp-validation-for="Direccion.EmpresaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.ShortName" class="control-label"></label>
                <input asp-for="Direccion.ShortName" class="form-control" />
                <span asp-validation-for="Direccion.ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.Calle" class="control-label"></label>
                <input asp-for="Direccion.Calle" class="form-control" />
                <span asp-validation-for="Direccion.Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.Numeracion" class="control-label"></label>
                <input asp-for="Direccion.Numeracion" class="form-control" />
                <span asp-validation-for="Direccion.Numeracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.Comuna" class="control-label"></label>
                <select asp-for="Direccion.Comuna" class="form-control"></select>
                <span asp-validation-for="Direccion.Comuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.Region" class="control-label"></label>
                <select asp-for="Direccion.Region" class="form-control"></select>
                <span asp-validation-for="Direccion.Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion.Pais" class="control-label"></label>
                <select asp-for="Direccion.Pais" class="form-control"></select>
                <span asp-validation-for="Direccion.Pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
