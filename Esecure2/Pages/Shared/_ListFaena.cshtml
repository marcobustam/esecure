@{
}
@model EsecureWebApp.Pages.Mantenedores.Empresas.DetailsModel
<div id="faenas">
    <h4>Lista de Faenas:</h4>
    <table class="table table-bordered table-striped table-hover text-dark table-responsive-md" style="width:100%" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListaFaenas[0].NombreFaena)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaFaenas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreFaena)
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>