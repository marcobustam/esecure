@{
}
@model EsecureWebApp.Pages.Mantenedores.Empresas.DetailsModel
<button type="button" data-toggle="collapse" data-target="#agregarPersona" class="btn btn-primary btn-sm" role="button">
    Nueva Persona <span class="glyphicon glyphicon-plus"></span>
</button>
<div id="agregarPersona" class="collapse">

    <h4>Agregar Persona</h4>
    <div class="col-md-4">
        <form method="post" asp-page="/Mantenedores/Personas/Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPersona.Documento" class="control-label"></label>
                <input asp-for="NewPersona.Documento" class="form-control" />
                <span asp-validation-for="NewPersona.Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.Alias" class="control-label"></label>
                <input asp-for="NewPersona.Alias" class="form-control" />
                <span asp-validation-for="NewPersona.Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.PrimerNombre" class="control-label"></label>
                <input asp-for="NewPersona.PrimerNombre" class="form-control" />
                <span asp-validation-for="NewPersona.PrimerNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.SegundoNombre" class="control-label"></label>
                <input asp-for="NewPersona.SegundoNombre" class="form-control" />
                <span asp-validation-for="NewPersona.SegundoNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.ApellidoPaterno" class="control-label"></label>
                <input asp-for="NewPersona.ApellidoPaterno" class="form-control" />
                <span asp-validation-for="NewPersona.ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.ApellidoMaterno" class="control-label"></label>
                <input asp-for="NewPersona.ApellidoMaterno" class="form-control" />
                <span asp-validation-for="NewPersona.ApellidoMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPersona.FechaNacimiento" class="control-label"></label>
                <input asp-for="NewPersona.FechaNacimiento" class="form-control" />
                <span asp-validation-for="NewPersona.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>