@{
}
@model EsecureWebApp.Pages.Mantenedores.Empresas.DetailsModel
<div id="planesMitigacion">
    <h4>Planes de mitigación</h4>
    <table class="table table-bordered table-striped table-hover text-dark table-responsive-md" style="width:100%" id="datata">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IssueList[0].Nombre)
                </th>
                <th>Acciones</th>
                <th>Ver Issues</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.IssueList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-emid="@Model.MyEmpresa.EmpresaID" asp-route-plid="@item.PlanID" asp-route-id="@item.IssueListId">Editar</a> |
                        <a asp-page="./Details" asp-route-emid="@Model.MyEmpresa.EmpresaID" asp-route-plid="@item.PlanID" asp-route-id="@item.IssueListId">Detalles</a> |
                        <a asp-page="./Delete" asp-route-emid="@Model.MyEmpresa.EmpresaID" asp-route-plid="@item.PlanID" asp-route-id="@item.IssueListId">Eliminar</a>
                    </td>
                    <td>
                        <a asp-page="/Planes/Mitigacion/Issues/Index" asp-route-emid="@Model.MyEmpresa.EmpresaID" asp-route-plid="@item.PlanID" asp-route-ilid="@item.IssueListId">Ver Issues</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>