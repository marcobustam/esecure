@{
}
@model EsecureWebApp.Pages.Mantenedores.Empresas.DetailsModel
<button type="button" data-toggle="collapse" data-target="#agregarFaena" class="btn btn-primary btn-sm" role="button">
    Agregar Faena: <span class="glyphicon glyphicon-plus"></span>
</button>
<div id="agregarFaena" class="collapse">
    <h4>Nueva Faenas:</h4>
    <div class="row" id="formNuevaFaena">
        <div class="col-md-4">
            <form method="post" asp-page="/Mantenedores/Faenas/Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NuevaFaena.EmpresaID" class="control-label"></label>
                    <select asp-for="NuevaFaena.EmpresaID" class="form-control" asp-items="ViewBag.EmpresaID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NuevaFaena.NombreFaena" class="control-label"></label>
                    <input asp-for="NuevaFaena.NombreFaena" class="form-control" />
                    <span asp-validation-for="NuevaFaena.NombreFaena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>