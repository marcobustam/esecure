<div class="row align-content-center ">
    <div class="col-3"> </div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h3 class="card-title text-center">Iniciar Sesión</h3>
                <form class="form-signin" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <h4>Usa tu cuenta para entrar.</h4>
                    <hr />
                    <div class="form-label-group">
                        <input type="email" id="inputEmail" asp-for="Input.Email" class="form-control" placeholder="correo@servidor.com" required autofocus />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-label-group">
                        <input asp-for="Input.Password" type="password" id="inputPassword" class="form-control" placeholder="Password" required />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="custom-control-label" for="customCheck1">Recuérdame</label>

                    </div>
